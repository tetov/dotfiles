export XDG_CONFIG_HOME=$HOME/.config

export XDG_DATA_HOME=${XDG_DATA_HOME:-$HOME/.local/share}
export XDG_STATE_HOME=${XDG_STATE_HOME:-$HOME/.local/state}
export XDG_RUNTIME_DIR=${XDG_RUNTIME_DIR:-/run/user/$(id -u)}
export XDG_CACHE_HOME=${XDG_CACHE_HOME:-$HOME/.cache}

# EDITOR & VISUAL
if command -v nvim >/dev/null ; then
  EDITOR=nvim
elif command -v vim >/dev/null ; then
  EDITOR=vim
elif command -v vi >/dev/null ; then
  EDITOR=vi
fi

if command -v emacsclient >/dev/null ; then
  VISUAL="emacsclient -c"
else
  VISUAL=EDITOR
fi

# start emacs daemon if none found
export ALTERNATE_EDITOR=""

export EDITOR
export VISUAL

alias e="$EDITOR"
alias v="$VISUAL"
echo "$VISUAL" | grep -q "emacsclient" && alias vq="$VISUAL -n"

export PAGER=less

export LANG=en_US.UTF-8
export LC_ADDRESS=sv_SE.UTF-8
export LC_COLLATE=sv_SE.UTF-8
export LC_CTYPE=en_US.UTF-8
export LC_IDENTIFICATION=sv_SE.UTF-8
export LC_MEASUREMENT=sv_SE.UTF-8
export LC_MESSAGES=en_US.UTF-8
export LC_MONETARY=sv_SE.UTF-8
export LC_NAME=sv_SE.UTF-8
export LC_NUMERIC=sv_SE.UTF-8
export LC_PAPER=sv_SE.UTF-8
export LC_TELEPHONE=sv_SE.UTF-8
export LC_TIME=sv_SE.UTF-8

# For gpg agent forwarding. (Dir gets deleted on log out)
gpgconf --create-socketdir

# if not SSH connection
if [ test -z "$SSH_CLIENT" ] ; then
  export GPG_TTY=$(tty)
  gpgconf --launch gpg-agent
fi

export SSH_AUTH_SOCK="$(gpgconf --list-dirs agent-ssh-socket)"

export GVIMINIT='let $MYGVIMRC="$XDG_CONFIG_HOME/vim/vimrc" | source $MYGVIMRC'
export VIMINIT='let $MYVIMRC="$XDG_CONFIG_HOME/vim/vimrc" | source $MYVIMRC'

export CUPS_USER=an6802jo@lu.se

export DOOMDIR=$XDG_CONFIG_HOME/doom

# queue dir for msmtp
export QUEUEDIR=$XDG_DATA_HOME/mail/msmtpqueue

# onepassword/1password
export OP_BIOMETRIC_UNLOCK_ENABLED=true

# vim: set ft=sh ts=2

# Local Variables:
# mode: sh
# End:
