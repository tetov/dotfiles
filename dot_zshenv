# Needs to be set here, so Zsh can find your other dotfiles.
ZDOTDIR=~/.config/zsh

emulate sh -c 'source $HOME/.profile'

typeset -aU path

path=(/usr/lib/ccache $path)

path+=~/bin
path+=${DOTFILES}/bin
path+=~/.cargo/bin
path+=~/.local/bin
path+=~/.poetry/bin
path+=${XDG_CONFIG_HOME}/doom-emacs/bin
