" mkspell if needed
for d in glob('~/.vim/spell/*.add', 1, 1)
    if filereadable(resolve(d)) && (!filereadable(d . '.spl') || getftime(d) > getftime(d . '.spl'))
        exec 'mkspell! ' . fnameescape(d)
    endif
endfor

